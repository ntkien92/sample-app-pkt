<% provide(:title, @user.name) %>
<div class = "row">
  <aside class = "col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3 id="microposts_profile_count">Microposts (<%= @user.microposts.count %>)</h3>
      <div id="microposts_profile">
        <%= render 'microposts/microposts' %>
      </div>
    <% end %>
  </div>
</div>
